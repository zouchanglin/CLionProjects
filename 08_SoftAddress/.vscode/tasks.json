{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_test",  // 与launch的"preLaunchTask"一致
            "type": "shell",
            "command": "mingw32-make.exe",       // 使用 makefile
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "$workspaceRoot"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}